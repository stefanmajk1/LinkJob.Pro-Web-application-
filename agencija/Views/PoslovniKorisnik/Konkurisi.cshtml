@model agencija.Models.Kandidat

@{
    ViewBag.Title = "Konkurisi";
}

@using (Html.BeginForm("Konkurisi1", "PoslovniKorisnik", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin:0px auto;margin-left:20%;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label">IdOglas</label>
        <input type="number" name="idOglas" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">ID Korisnik</label>
        <input type="number" name="idUser" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Propratni Dokument</label>
        <input type="file" name="propratniDokument1" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">CV</label>
        <input type="file" name="cv1" class="form-control" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
