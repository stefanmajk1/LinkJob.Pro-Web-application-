<hr />
<h1 style="text-align:center; margin-top:30px; margin-bottom: 30px;">Poslovi</h1>
@foreach (var item in Model)
{
    foreach (var item2 in item.Oglas)
    {
        <div class="container" id="poslovi">
            <div class="poslovi" style="padding:10px;">
                <div class="detalji-kompanije">
                    <div class="posao">
                        <h4 style="float:left;">
                            <a href="@Url.Action("DetaljiOglas", "Home", new { id = item2.idOglas })"><b>@Html.DisplayFor(modelItem => item2.naslov)</b></a>
                        </h4><br /><br />
                        <p style="color:gray; font-size:medium"><b>@Html.DisplayFor(modelItem => item2.Kompanija.naziv)</b></p><br />
                        <i class="glyphicon glyphicon-map-marker"></i>
                        <span style="color:gray; font-size:medium"><b>@Html.DisplayFor(modelItem => item2.Mesto.naziv)</b></span><br /><br />
                        <button id="oglasIskustvo" class="btn btn-primary">@Html.DisplayFor(modelItem => item2.Kategorija.naziv)</button>
                        <button id="oglasIskustvo" class="btn btn-primary">@Html.DisplayFor(modelItem => item2.Iskustvo.naziv)</button>
                    </div>

                </div>


            </div>
        </div>
    }
    break;
}








































